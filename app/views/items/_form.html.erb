<div class="container">

  <%= form_with(model: item, local: true) do |form| %>

    <%# エラー内容出力 %>
    <% if item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

        <ul>
        <% item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%# 実フォーム部分 %>
    <!-- タイトル -->

    <div class="form-group row">
      <%= form.label t('items.title'), class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :title,
              placeholder: 'タイトル',
              class: "form-control"
        %>
      </div>
    </div>


    <!-- 詳細 -->
    <div class="form-group row">
      <%= form.label t('items.description'), class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :description,
              placeholder: '詳細',
              class: "form-control"
        %>
      </div>
    </div>

    <!-- URL -->
    <div class="form-group row">
      <%= form.label t('items.url'), class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :url,
              placeholder: 'https://',
              class: "form-control"
        %>
      </div>
    </div>

    <!-- Image -->
    <div class="form-group row">
      <%= form.label t('items.image'), class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.file_field :image,
              class: "form-control",
              placeholder: 'Choose a file...'
        %>
      </div>
    </div>

    <!-- Category -->
    <div class="form-group row">
      <%= form.label t('items.category'), class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.collection_select :category_id,
              @categories,
              :category_id,
              :category_name,
              { prompt: "カテゴリー選択" },
              { class: "form-control" }
        %>
      </div>
    </div>

    <!-- UserID -->
    <%= form.hidden_field :user_id, value: current_user.id %>

    <div class="actions">
      <%= form.submit class: "btn btn-primary mb-2" %>
    </div>

  <% end %>
</div>
